<%- include('../partials/header') %>
    <!-- ============================================================== -->
    <!-- Page wrapper  -->
    <!-- ============================================================== -->
    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb">
            <div class="row">
                <div class="col-12 d-flex no-block align-items-center">
                    <h4 class="page-title">Edit Admin Page</h4>
                    <div class="ms-auto text-end">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Edit Admin
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Container fluid  -->
        <!-- ============================================================== -->
        <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Start Page Content -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <form class="form-horizontal" action="" method="post" enctype="multipart/form-data">
                            <div class="card-body">
                                <h4 class="card-title">Edit Admin Info</h4>
                                <% let name = admin.name.split(" ") %>
                                <div class="form-group row">
                                    <label for="fname" class="col-sm-3 text-end control-label col-form-label">First
                                        Name</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" id="fname" name="fname"
                                            placeholder="First Name Here" value="<%= name[0] %>" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="lname" class="col-sm-3 text-end control-label col-form-label">Last
                                        Name</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" id="lname" name="lname"
                                            placeholder="Last Name Here" value="<%= name[1] %>" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="password"
                                        class="col-sm-3 text-end control-label col-form-label">Password</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" id="password" name="password"
                                            placeholder="Password Here" value="<%= admin.password %>" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="email"
                                        class="col-sm-3 text-end control-label col-form-label">Email</label>
                                    <div class="col-sm-9">
                                        <input type="email" class="form-control" id="email" name="email"
                                            placeholder="Email Here" value="<%= admin.email %>" />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="gender"
                                        class="col-sm-3 text-end control-label col-form-label">Gender</label>
                                    <div class="col-sm-9">
                                        <div class="form-check">
                                            <input type="radio" class="form-check-input" id="customControlValidation1"
                                                name="gender" value="Male" <% if(admin.gender ==  "Male") { %>checked<% } %> required />
                                            <label class="form-check-label mb-0"
                                                for="customControlValidation1">Male</label>
                                        </div>
                                        <div class="form-check">
                                            <input type="radio" class="form-check-input" id="customControlValidation2"
                                                name="gender" value="Female"  <% if(admin.gender == "Female") {%>checked<%}%> required />
                                            <label class="form-check-label mb-0"
                                                for="customControlValidation2">Female</label>
                                        </div>
                                        <div class="form-check">
                                            <input type="radio" class="form-check-input" id="customControlValidation3"
                                                name="gender" value="Other" <% if(admin.gender == "Other") {%>checked<%}%> required />
                                            <label class="form-check-label mb-0"
                                                for="customControlValidation3">Other</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="hobby"
                                        class="col-sm-3 text-end control-label col-form-label">Hobby</label>
                                    <div class="col-sm-9">
                                        <div class="form-check mr-sm-2">
                                            <input type="checkbox" name="hobby" value="Reading"  <% if(admin.hobby.includes("Reading")) {%>checked<%}%>
                                                class="form-check-input" id="customControlAutosizing1" />
                                            <label class="form-check-label mb-0"
                                                for="customControlAutosizing1">Reading</label>
                                        </div>
                                        <div class="form-check mr-sm-2">
                                            <input type="checkbox" name="hobby" value="Singing" <% if(admin.hobby.includes("Singing")) {%>checked<%}%>
                                                class="form-check-input" id="customControlAutosizing2" />
                                            <label class="form-check-label mb-0"
                                                for="customControlAutosizing2">Singing</label>
                                        </div>
                                        <div class="form-check mr-sm-2">
                                            <input type="checkbox" name="hobby" value="Travelling" <% if(admin.hobby.includes("Travelling")) {%>checked<%}%>
                                                class="form-check-input" id="customControlAutosizing3" />
                                            <label class="form-check-label mb-0"
                                                for="customControlAutosizing3">Travelling</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="text-end ">
                                        <img src="../<%= admin.image %>" alt="<%= admin.name %>" width="100">
                                        <input type="hidden" value="<%= admin.image %>" name="oldImage"/>
                                    </div>
                                    <label for="image" class="col-sm-3 text-end control-label col-form-label">Image</label>
                                    <div class="col-sm-9">
                                        <div class="custom-file">
                                            <input type="file" class="form-control" name="image" id="validatedCustomFile"
                                                required />
                                            <input type="hidden" name="image">
                                        </div>
                                    </div>
                                </div>
                                <div class="border-top">
                                    <div class="card-body">
                                        <button type="submit" class="btn btn-primary">
                                            Submit
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- ============================================================== -->
            <!-- End PAge Content -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Right sidebar -->
            <!-- ============================================================== -->
            <!-- .right-sidebar -->
            <!-- ============================================================== -->
            <!-- End Right sidebar -->
            <!-- ============================================================== -->
        </div>
        <!-- ============================================================== -->
        <!-- End Container fluid  -->
        <!-- ============================================================== -->
        <%- include('../partials/footer') %>

    